<project name="jboss-config" default="deploy" basedir="../jboss-config">

	<property name="server" location="D:/DESENVOLVIMENTO/APPLICATION_SERVER/jboss-5.1.0.GA_personal/server/default"/>
	
	<target name="conf" depends="lib">
        <copy todir="${server}/conf">
			<fileset dir="conf">
				<include name="**"/>
			</fileset>
		</copy>
	</target>
	
	<target name="deploy" depends="conf">
		<copy todir="${server}/deploy">
			<fileset dir="deploy">
				<include name="**"/>
			</fileset>
		</copy>
	</target>
	
	<target name="lib">
		<copy todir="${server}/lib">
			<fileset dir="lib">
				<include name="**"/>
			</fileset>
		</copy>
	</target>
	
</project>