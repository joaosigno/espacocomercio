			<mvc:mapping path="/order/products" />
			<mvc:mapping path="/updatePassword" />
			<mvc:mapping path="/updatePassword/" />
			<mvc:mapping path="/updateAddress" />
			<mvc:mapping path="/updateAddress/" />
			<mvc:mapping path="/updateData" />
			<mvc:mapping path="/updateData/" />
			
			<bean class="net.danielfreire.products.ecommerce.util.SessionInterceptor" />
		</mvc:interceptor>
		
