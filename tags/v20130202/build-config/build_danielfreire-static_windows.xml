<project name="danielfreire-static" default="deploy" basedir="../danielfreire-static">

	<property name="server" location="D:/DESENVOLVIMENTO/APPLICATION_SERVER/jboss-5.1.0.GA_personal/server/default/deploy/library.war"/>
	<property name="mvn" location="D:/DESENVOLVIMENTO/TOOLKIT/apache-maven-3.0.4/bin/mvn"/>
	
	<target name="clean">
		<exec executable="cmd" failonerror="true" dir=".">
			<arg value="/c" />
			<arg value="${mvn} clean" />
		</exec>
	</target>
	
	<target name="package" depends="clean">
		<exec executable="cmd" failonerror="true" dir=".">
			<arg value="/c" />
			<arg value="${mvn} install" />
		</exec>
	</target>
	
	<target name="deploy" depends="package">
        <copy todir="${server}">
			<fileset dir="target/library">
				<include name="**"/>
			</fileset>
		</copy>
		<exec executable="cmd" failonerror="true" dir=".">
			<arg value="/c" />
			<arg value="${mvn} clean" />
		</exec>
	</target>
	
</project>